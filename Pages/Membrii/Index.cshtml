@page
@model Proiect_Restanta_Medii_Cadis_Voicila.Pages.Membrii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Membru[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membru[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membru[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membru[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membru[0].NumarDeTelefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Membru) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarDeTelefon)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
