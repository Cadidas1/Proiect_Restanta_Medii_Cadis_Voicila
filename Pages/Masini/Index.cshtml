@page "/"
@model Proiect_Restanta_Medii_Cadis_Voicila.Pages.Masini.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Masini</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Gaseste dupa modelul masinii / numele agentului:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ModelSort">
                    @Html.DisplayNameFor(model => model.Masina[0].Model)
                </a>
            </th>
            <th colspan="2">
                <a asp-page="./Index" asp-route-sortOrder="@Model.AgentInchirieriSort">
                    @Html.DisplayNameFor(model => model.Masina[0].AgentInchirieri)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masina[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masina[0].AnulFabricarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masina[0].Reprezentanta.NumeReprezentanta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masina[0].CategoriiMasina)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MasinaD.Masini)
        {
            string selectedRow = "";
            if (item.ID == Model.MasinaID)
            {
                selectedRow = "table-success";
            }

            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgentInchirieri.Nume)
                    @Html.DisplayFor(modelItem => item.AgentInchirieri.Prenume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pret)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnulFabricarii)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reprezentanta.NumeReprezentanta)
                </td>
                <td>
                    @{
                        foreach (var categorie in item.CategoriiMasina)
                        {
                            @categorie.Categorie.ID @: @categorie.Categorie.TipMasina <br />
                        }
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>